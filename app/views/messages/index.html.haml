.flash-box
  グループを作成しました
.wrapper
  .chat-side
    .side-header
      %p.side-header__user-name
        test-user
      %ul.user-menu
        %li
          = link_to '', class: "user-menu__edit-user" do
            = fa_icon "edit"
            %span<>
        %li
          = link_to '', class: "user-menu__new-group" do
            = fa_icon "cog"
            %span<>
    .groups
      = render partial: "group_name.html.haml"
  .chat-main
    .main-header
      .current-group
        %h2.current-group__name
          test-group
        %ul.member-list
          Member:
          %li.member-list__member
            test-user
          %li.member-list__member
            good-user
      = link_to '' do
        .main-header__edit-btn
          Edit
    .messages
      = render partial: "message_info.html.haml"
    .form
      %form.new-message
        .input-box
          = text_field :text, placeholder: "type a message", class: "input-box__text", type: "text"
          %label.upload-label{for: "upload-icon"}
            %i.fa.fa-image
            =file_field :image, id: "upload-icon", class: "image-input"
        = link_to '' do
          .new-message__submit-btn
            Send
